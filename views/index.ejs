<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <link rel="stylesheet" href="/style/style.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Task Manager</title>
</head>
<body>

  <div class="container">
    <form action="/home" method="post" class="form-box">
      <input type="text" name="filename" id="input" placeholder="Enter file name" required />
      <textarea name="area" id="textarea" placeholder="Enter task content" required></textarea>
      <input type="submit" value="Submit" />
    </form>

    <div class="task-list">
      <% if (files.length > 0) { %>
        <% files.forEach(element => { %>
          <div class="task-item">
  <h3><%= element %></h3>
  <div class="task-actions">
    <a href="/files/<%= element %>">Read More</a>
    <a href="/delete/<%= element %>" class="delete-btn">Delete</a>
  </div>
</div>
        <% }) %>
      <% } else { %>
        <p class="no-task">No Tasks Available</p>
      <% } %>
    </div>
  </div>

  <script src="/js/script.js"></script>
</body>
</html>
